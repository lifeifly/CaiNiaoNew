<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/def_background</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:windowBackground">@color/def_background</item>
    </style>

    <style name="CollapseTheme" parent="@style/AppTheme"></style>

    <style name="NavItemText">
        <item name="android:textColor">@color/def_text_black</item>
    </style>

    <style name="VerScrollStyle">
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="HorScrollStyle">
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>


    <style name="TitleText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SourceText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
