<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwitchImageView">
        <attr name="switchDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="TrackIndicatorView">
        <attr name="tabVisibleNums" format="integer" />
    </declare-styleable>

    <declare-styleable name="BannerView">
        <!--点的选中和默认的颜色值-->
        <attr name="dotIndicatorFocusColor" format="color|reference" />
        <attr name="dotIndicatorDefaultColor" format="color|reference" />
        <!--点的大小-->
        <attr name="dotIndicatorSize" format="dimension" />
        <!--点的位置和距离-->
        <attr name="dotIndicatorDistance" format="dimension" />

        <attr name="dotGravity" format="enum">
            <enum name="CENTER" value="0" />
            <enum name="RIGHT" value="1" />
            <enum name="LEFT" value="-1" />
        </attr>
        <!--底部的颜色-->
        <attr name="bottomColor" format="color" />
        <!--宽高比-->
        <attr name="widthProperties" format="float"/>
        <attr name="heightProperties" format="float"/>
    </declare-styleable>

</resources>