<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwitchImageView">
        <attr name="switchDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="TrackIndicatorView">
        <attr name="tabVisibleNums" format="integer" />
    </declare-styleable>

    <declare-styleable name="BannerView">
        <attr name="indicatorRadius" format="dimension" />
        <attr name="selectedColor" format="color" />
        <attr name="defaultColor" format="color" />
        <attr name="dotGravity" format="enum">
            <enum name="CENTER" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
        <attr name="bottomColor" format="color" />
        <attr name="dotDistance" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CountView">
        <!--数字的个数-->
        <attr name="cv_count" format="integer" />
        <!--数字颜色-->
        <attr name="cv_text_color" format="color" />
        <!--数字的尺寸-->
        <attr name="cv_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ThumbView">
        <!--是否已点赞-->
        <attr name="tv_isThumbUp" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ThumbContainer">
        <!--数字的个数-->
        <attr name="tc_count" format="integer" />
        <!--数字颜色-->
        <attr name="tc_text_color" format="color" />
        <!--数字的尺寸-->
        <attr name="tc_text_size" format="dimension" />
        <!--图片的padding-->
        <attr name="tc_drawable_padding" format="dimension" />
        <!--是否处于点赞状态-->
        <attr name="tc_isThumbUp" format="boolean" />

    </declare-styleable>
</resources>